@import "_in-specific-themes.postcss";

.__CUSTOM_CSS_JS_INDICATOR_CLS {
    display: none !important;
}

@mixin in-specific-themes {
    /* Hide the VSCode logo on the blank editor view */
    .editor-group-watermark .letterpress {
        display: none;
    }

    /* Hide the "File Annotations" (Git, provided by GitLens) button on the right side of the editor tabs */
    .editor-actions .action-label[title="File Annotations"] {
        display: none;
    }
}
