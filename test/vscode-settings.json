{
  // Disable alerts and notifications
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.emptyWindow": false,
  // Set theme
  "workbench.colorTheme": "Spacegray Input Dark",
  "workbench.iconTheme": "spacegray",
  "workbench.productIconTheme": "spacegray-icons-carbon",
  // Set font
  "editor.fontFamily": "Input Mono Narrow",
  "editor.fontWeight": "300",
  "editor.fontSize": 16,
  "editor.lineHeight": 1.5,
  // Set other editor settings
  "editor.renderLineHighlight": "gutter",
  "editor.lightbulb.enabled": false,
  // Settings for testing convenience
  "git.openRepositoryInParentFolders": "always",
  "jest.autoRun": false,
  "jest.runMode": {
    "type": "on-demand",
    "deferred": true,
  },
  // For screenshots in 2x
  "window.zoomLevel": 4,
}
